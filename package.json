{
  "name": "rtd-style",
  "version": "0.4.2",
  "description": "shared style assets for RTD",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:css": "stylelint \"scss/**/*.scss\"",
    "format": "prettier --write \"**/*.{scss,json,yml,md,js}\"",
    "build:dev": "webpack -d --mode development",
    "build": "webpack -p --mode production",
    "start": "webpack-dev-server --mode development"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:css"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rideRTD/rtd-style.git"
  },
  "author": "RTD",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rideRTD/rtd-style/issues"
  },
  "homepage": "https://github.com/rideRTD/rtd-style#readme",
  "devDependencies": {
    "css-loader": "3.2.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "3.0.4",
    "img-loader": "3.0.1",
    "mini-css-extract-plugin": "0.8.0",
    "node-sass": "4.12.0",
    "prettier": "1.18.2",
    "resolve-url-loader": "3.1.0",
    "sass-loader": "7.3.1",
    "style-loader": "1.0.0",
    "stylelint": "10.1.0",
    "stylelint-config-prettier": "5.2.0",
    "stylelint-config-recommended-scss": "3.3.0",
    "stylelint-prettier": "1.1.1",
    "stylelint-scss": "3.10.0",
    "svg-url-loader": "3.0.0",
    "tar": ">=4.4.10",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.7",
    "webpack-dev-server": "3.8.0",
    "webpack-fix-style-only-entries": "0.3.1"
  }
}
